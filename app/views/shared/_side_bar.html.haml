.side-bar
  .header
    .header__box
      .header__box__name
        =current_user.name
      %ul.header__box__menu
        %li.header__box__menu__new-group
          = link_to new_group_path, class: "new-group__btn" do
            = icon('far', 'edit')
          
        %li.header__box__menu__edit-user
          = link_to edit_user_path(current_user), class: "edit-user__btn" do
            = icon('fas', 'cog')         



  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' ,class:"link" do
          .group__name
            = group.name
          .group__message
